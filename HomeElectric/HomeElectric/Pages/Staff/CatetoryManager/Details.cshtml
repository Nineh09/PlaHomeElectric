@page
@model HomeElectric.Pages.Staff.CatetoryManager.DetailsModel

@{
    Layout = "StaffLayout";
    ViewData["Title"] = "Details";
}

<style>
    /* CSS for centering the Details page */
    .container {
        display: flex;
        justify-content: center;
    }

    .details-container {
        width: 80%; /* Adjust the width as needed */
        margin-top: 50px; /* Adjust the top margin as needed */
    }
</style>

<div class="container">
    <div class="details-container">
        <h1>Details</h1>

        <div style="margin-top: 100px;">
            <h4>Category</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category.CategoryName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Description)
                </dd>
                <dt class="col-sm-2">
                    Status
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Category.Status == 1)
                    {
                        <span class="status-active">Active</span>
                    }
                    else if (Model.Category.Status == 0)
                    {
                        <span class="status-inactive">Inactive</span>
                    }
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category.CreationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CreationDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category.ModificationDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.ModificationDate)
                </dd>
                <dt class="col-sm-2">
                    Is Deleted
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.IsDeleted)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-page="./Edit" asp-route-id="@Model.Category?.Id">Edit</a> |
            <a asp-page="./Index">Back to List</a>
        </div>
    </div>
</div>
