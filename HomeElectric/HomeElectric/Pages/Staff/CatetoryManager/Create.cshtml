@page
@model HomeElectric.Pages.Staff.CatetoryManager.CreateModel

@{
    Layout = "StaffLayout";
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="details-container">
        <h1>Create</h1>
        <div style="margin-top: 100px;">
            <h4>Category</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Category.CategoryName" class="control-label"></label>
                            <input asp-for="Category.CategoryName" class="form-control" />
                            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Category.Description" class="control-label"></label>
                            <input asp-for="Category.Description" class="form-control" />
                            <span asp-validation-for="Category.Description" class="text-danger"></span>
                        </div>
                        <!-- Ẩn các trường không cần thiết -->
                        <input type="hidden" asp-for="Category.Status" value="1" />
                        <input type="hidden" asp-for="Category.CreationDate" />
                        <input type="hidden" asp-for="Category.ModificationDate" />
                        <input type="hidden" asp-for="Category.IsDeleted" value="false" />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-page="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>